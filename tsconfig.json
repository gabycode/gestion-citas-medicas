{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "types": ["node", "jest"],
      "lib": ["ES2020"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  